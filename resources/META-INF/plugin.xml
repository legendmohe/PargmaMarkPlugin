<idea-plugin>
    <id>com.legendmohe.plugin.pargmamark</id>
    <name>PargmaMarkPlugin</name>
    <version>1.0.1</version>
    <vendor email="legendmohe@foxmail.com" url="http://legendmohe.net">legendmohe</vendor>

  <description><![CDATA[
        Bring Pargma-Mark to Intellij IDEA!<br><br>
        Default keymap is <em>Ctrl + Alt + Comma</em><br><br>
        github: <br>
        <a href=https://github.com/legendmohe/PargmaMarkPlugin>PargmaMarkPlugin</a>
    ]]></description>

  <change-notes><![CDATA[
      1.0 - init commit
    ]]>
  </change-notes>

    <idea-version since-build="162.0"/>
  <actions>
      <group id="LineDesc.GotoPargmaMark">
          <action id="GotoPargmaMark" class="com.legendmohe.pargmamark.GotoPargmaMarkAction">
              <keyboard-shortcut first-keystroke="control alt comma" second-keystroke="C" keymap="$default"/>
          </action>

          <add-to-group group-id="GoToMenu" anchor="first"/>
      </group>
  </actions>

</idea-plugin>